{
	"bugs": "https://github.com/cedx/card/issues",
	"description": "Business card of Cédric Belin, full stack developer.",
	"homepage": "https://docs.belin.io/card",
	"license": "MIT",
	"name": "@cedx/card",
	"repository": "cedx/card",
	"type": "module",
	"version": "5.0.0",
	"author": {
		"email": "cedric@belin.io",
		"name": "Cédric Belin",
		"url": "https://belin.io"
	},
	"bin": {
		"belin_card": "./bin/belin_card.js"
	},
	"devDependencies": {
		"@types/eslint__js": "^8.42.3",
		"@types/node": "^20.11.24",
		"boxen": "^7.1.1",
		"chalk": "^5.3.0",
		"del": "^7.1.0",
		"esbuild": "^0.20.1",
		"eslint": "^8.57.0",
		"execa": "^8.0.1",
		"typedoc": "^0.25.10",
		"typescript": "^5.3.3",
		"typescript-eslint": "^7.1.0"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"exports": {
		"types": "./lib/index.d.ts",
		"import": "./lib/index.js"
	},
	"files": [
		"lib/",
		"src/"
	],
	"keywords": [
		"card",
		"cedx",
		"cli"
	],
	"scripts": {
		"build": "tsc --project src/tsconfig.json && esbuild \"--banner:js=#!/usr/bin/env node\" --bundle --format=esm --legal-comments=none --minify --outfile=bin/belin_card.js --platform=node src/cli.ts",
		"clean": "node tool/clean.js",
		"dist": "npm run clean && npm run build && git update-index --chmod=+x bin/belin_card.js",
		"doc": "typedoc --options etc/typedoc.js && node tool/doc.js",
		"lint": "npm run build && tsc --project tsconfig.json && eslint --config=etc/eslint.config.js etc src tool",
		"postpublish": "node tool/publish.js",
		"prepack": "npm run dist",
		"start": "npm run build && node bin/belin_card.js",
		"watch": "esbuild --bundle --format=esm --legal-comments=none --outfile=bin/belin_card.js --platform=node --watch src/cli.ts"
	}
}
