{
	"bugs": "https://github.com/cedx/card/issues",
	"description": "Business card of Cédric Belin, full stack developer.",
	"homepage": "https://cedx.github.io/card",
	"license": "MIT",
	"name": "@cedx/card",
	"repository": "cedx/card",
	"type": "module",
	"version": "5.0.0",
	"author": {
		"email": "cedric@belin.io",
		"name": "Cédric Belin",
		"url": "https://belin.io"
	},
	"bin": {
		"belin_card": "./bin/belin_card.js"
	},
	"devDependencies": {
		"@types/node": "^20.11.5",
		"@typescript-eslint/eslint-plugin": "^6.19.1",
		"@typescript-eslint/parser": "^6.19.1",
		"boxen": "^7.1.1",
		"chalk": "^5.3.0",
		"esbuild": "^0.19.12",
		"eslint": "^8.56.0",
		"typedoc": "^0.25.7",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"exports": {
		"types": "./lib/index.d.ts",
		"import": "./lib/index.js"
	},
	"files": [
		"lib/",
		"src/"
	],
	"keywords": [
		"card",
		"cedx",
		"cli"
	],
	"scripts": {
		"build": "tsc --project src/tsconfig.json && esbuild --allow-overwrite --bundle --format=esm --legal-comments=none --log-level=warning --minify --outfile=bin/belin_card.js --platform=node src/cli.ts",
		"clean": "node tool/clean.js",
		"dist": "npm run clean && npm run build && node tool/dist.js && git update-index --chmod=+x bin/belin_card.js",
		"doc": "typedoc --options etc/typedoc.json && node tool/doc.js",
		"lint": "tsc --project tsconfig.json && eslint --config=etc/eslint.json src tool",
		"postpublish": "node tool/publish.js",
		"prepack": "npm run dist",
		"start": "npm run build && node bin/belin_card.js"
	}
}
